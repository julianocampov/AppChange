<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppChange" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Blue</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:textColor">@color/black</item>   // texto de los textView

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item> //texto de los editText

        <item name="android:colorBackground">@color/white</item>  //color de fondo

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Blue</item>
        <item name="colorSecondaryVariant">@color/Blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>